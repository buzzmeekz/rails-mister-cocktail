<%= render 'shared/banner' %>
<div class="container" id="cocktails">
  <div class="title text-center">
    <h1 class="text-center title">Popular cocktails</h1>
  </div>
  <div class="row">
    <% @cocktails.each do |c| %>
    <div class="col-xs-12 col-sm-4">
      <%= render 'shared/card', cocktail: c %>
    </div>
    <% end %>
  </div>
</div>