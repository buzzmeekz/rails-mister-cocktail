<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h1 class="text-center">Cocktail list</h1>
      <ul>
        <% @cocktails.each do |cocktail| %>
        <li>
          <%= link_to(cocktail.name, cocktail_path(id: cocktail.id)) %>
        </li>
        <% end %>
      </ul>
      <hr>
      <h3 class="text-center"><%= link_to 'Add a new cocktail', new_cocktail_path %></h3> 
    </div>
  </div>
</div>