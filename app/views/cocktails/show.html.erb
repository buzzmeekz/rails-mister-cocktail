<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-2">
      <h1><%= @cocktail.name %></h1>
      <% if @cocktail.photo? %>
      <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
      <% else %>
      <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :photo, as: :attachinary %>
      <%= f.submit %> 
      <% end %>
      <% end %>
      
    </div>
    <div class="col-xs-12 col-sm-6">
      <br><br>
      <h4>Doses</h4>
      <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail.id) %>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> - <%= dose.ingredient.name %><br>
          <%= link_to "Delete", dose_path(dose.id), method: :delete %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
