<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <h1><%= @cocktail.name %></h1>
      <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail.id) %>
      <hr>
      <h3>Doses</h3>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> - <%= dose.ingredient.name %><br>
          <%= link_to "Delete", dose_path(dose.id), method: :delete %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
